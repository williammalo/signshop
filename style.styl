@import '../lib/nib/'
brand=#26b0ec
*{position:relative;box-sizing:border-box;text-rendering:optimizeLegibility;line-height:1.5em}
body{font-family: Ubuntu, Helvetica Neue,Helvetica,sans-serif;margin:0;color:rgba(0,0,0,0.7);background:desaturate(lighten(brand,80%),40%);padding-bottom:10px}

a
	color:white
	color:rgba(white,0.7)
p
	margin:0
ul
	margin:0

h1 small{font-size:0.62em;color:#000;text-shadow:0 1px 0 rgba(255,255,255,0.2)}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//header styles
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
header
	padding:20px
	border-bottom: solid 1px rgba(#000,0.3)
	box-shadow: 0 1px 0 rgba(#fff,0.5)
	text-shadow: 0 1px 0 rgba(255,255,255,0.5)
	background: brand
	background: linear-gradient(top, lighten(brand,40%) 0%,lighten(brand,20%) 10% ,brand 90% ,darken(brand,5%) 100%)
	text-shadow:0 1px 0 rgba(255,255,255,0.2)

hgroup img{height:80px;margin-right:15px;padding-bottom:10px;vertical-align:middle}
h1{vertical-align:middle;display:inline-block;color:#eee;text-shadow:3px 3px 5px rgba(#000,0.4);margin:0}

#popup
	overflow:hidden
	transition:height 0.5s
	& figure,& article
		width:50%
		display:inline-block
		vertical-align:middle
	figure
		background:#fff
		overflow:hidden
		box-shadow:0 0 8px rgba(#000,0.3)
		margin:0
		&:before
			content:""
			display:block
			padding-top:48%
		img 
			position:absolute
			width:100%
			top:0
			transition:opacity 0.5s
	article
		padding-right:40px

footer
	font-size:0.62em
	color:black
	color:rgba(#000,0.4)
	margin-top:1em

#bg
	position:absolute
	top:0
	right:0
	height:195px
	opacity:0.7
@media(max-width:1000px)
	opacity:0.4

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//form styles
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

form{padding:30px;text-align:center}

input[type=text]
	font-size:1.4em
	padding:5px 10px
	width:300px
	max-width:100%
	border-radius:25px
	box-shadow:inset 0 2px 11px #ccc,0 1px 0 #fff,0 -1px 0 rgba(#000,0.2)
	border:none
	background:#fff url(search.png) center right no-repeat
	background-size:32px 24px
	//fixes bug in chrome
	font-family: Ubuntu

::-webkit-input-placeholder
	color: rgba(#000,0.3)

:-moz-placeholder
	color: rgba(#000,0.3)

#close
	height:48px
	padding:12px
	opacity:0
	vertical-align:bottom
	position:absolute

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//car list styles
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

#models
	text-align:center
#models img{height:90px;float:left;margin-right:10px;border:none}
#models a
	width:350px
	display:inline-block
	vertical-align:top
	padding:10px
	background:#fff
	margin:10px
	box-shadow:0 0 5px rgba(#000,0.1)
	text-align:left
	text-decoration:underline
	color:brand
