@import '../lib/nib/'
brand=#26b0ec
*{position:relative;box-sizing:border-box;text-rendering:optimizeLegibility}
body{background:#eee;font-family: Ubuntu, Helvetica Neue,Helvetica,sans-serif;text-align:center;margin:0;color:rgba(0,0,0,0.7)}
a{color:brand}
#models img{height:90px;float:left;margin-right:10px;border:none}
#models a{width:350px;display:inline-block;vertical-align:top;background:#fff;padding:10px;margin:10px;box-shadow:0 0 8px rgba(#000,0.1);text-align:left}
small{color:#aaa;font-size:0.6em;padding-left:20px}
h1 small{color:#000;padding:0;text-shadow:0 1px 0 rgba(255,255,255,0.2)}
input[type=text]
	font-size:20px
	padding:10px
	width:300px
	max-width:100%
	border-radius:25px
	box-shadow:inset 0 2px 11px #ccc,0 1px 0 #fff,0 -1px 0 rgba(#000,0.2)
	border:none
	background:#fff url(search.png) center right no-repeat
	background-size:32px 24px
	line-height:0
#bg{position:absolute;top:0;right:0;height:250px;opacity:0.7}
form{padding:50px}
header>img{height:70px;margin:0 20px;vertical-align:middle;display:inline-block}
h1{vertical-align:middle;display:inline-block;color:#eee;text-shadow:3px 3px 5px rgba(#000,0.4)}
header{text-align:left;background:#ddd;padding:20px 0 20px 20px;padding-right:40px;border-bottom:solid 1px rgba(#000,0.3);box-shadow:0 1px 0 rgba(#fff,0.5);text-shadow:0 1px 0 rgba(255,255,255,0.5)}
header p,header h2{padding-left:20px}
#popup{overflow:hidden;transition:height 0.5s}
#popup figure,#popup article{width:50%;display:inline-block;vertical-align:middle}
#popup figure{background:#fff;margin:0;overflow:hidden;box-shadow:0 0 8px rgba(#000,0.3)}
#popup figure:before{content:"";display:block;width:100%;height:0;padding-top:48%}
#popup figure img{position:absolute;width:100%;top:0;transition:opacity 0.5s}
#popup article{padding-right:40px}
::selection{background:rgba(brand,0.3)}

header
	background: brand
	background: linear-gradient(top, lighten(brand,40%) 0%,lighten(brand,20%) 10% ,brand 90% ,darken(brand,5%) 100%)
	text-shadow:0 1px 0 rgba(255,255,255,0.2)

body
	background:desaturate(lighten(brand,80%),40%)

a
	color:rgba(white,0.7)
#models a
	color:brand
small
	color:rgba(#000,0.4)

@media(max-width:1200px)
	#bg
		opacity:0.4

#close
	height:48px
	padding:12px
	opacity:0
	vertical-align:bottom
	position:absolute