
html
	min-width:570px

.pad
	display:inline-block
	padding-right:3em

.slide
	width:310px
	height:151px
	float:right
	margin:0
	position:relative

.slide img
	position:absolute
	top:0
	left:0

header
	position:relative

h1
	margin:0
	//padding:.5rem 1rem ie!!!!
	padding:7px 16px
	img
		width:26px
		height:58px
		margin-right:.4em
		vertical-align:middle
	span
		vertical-align:middle

#cart,#mail
	position:absolute
	font-size:.62em
	top:0
	padding:1em 0
	min-width:16px
	height:36px

#cart
	right:1em

#mail
	right:3.5em
	input[type=submit],input[type=email]
		border-radius:5px
		padding:1px 5px
		display:none

#mail:hover input
	display:inline-block

#mail:hover:before
	display:inline-block
	padding-right:1em

#subscribed:target #mail *
	display:none

nav
	position:absolute
	bottom:-1px
	right:0

nav a
	position:relative
	font-size:20px
	margin-right:17px
	display:inline-block
	padding:7px 1px 9px 1px
	line-height:1em

.tab
	position:relative
	transform:scale(.6,.6)
	transform-origin:0 0
	position:absolute
	top:0
	right:-34px

.tab:nth-child(1)
	left:-20px

.infobox
	padding:1em

.paypal
	height:25px
	width:98px
	vertical-align:middle

.popup
	display:none
#tmore:checked~div .popup
	display:block
input.more
	display:none

label.more
	display:block
	width:16px
	height:16px

#tmore:checked~div .popup strong
	display:block

.cover
	z-index:10
	position:fixed
	width:100%
	height:100%
	top:0
	left:0
	iframe
		position:absolute
		width:60%
		height:60%
		top:20%
		left:20%

#inputform
	text-align:center

#input
	font-size:1.4em
	padding:.3em .6em
	width:12em
	margin:2em 0
	
#input::-ms-clear
	display: none

#container a
	display:inline-block
	padding:1em
	width:100%
	//margin-bottom:1rem ie!!!
	margin-bottom:1em

#container
	padding:0 1em
	column-width:320px
	column-gap:1em

#container a img
	width:150px
	float:right
	margin-left:1em

.ie #container a
	width:320px
	margin-right:1em