aside
	padding:1em

aside div
	display:none

.logos aside .logos
.elements aside .elements
.templates aside .templates
.graphics aside .graphics
	display:block

.paypal
	height:25px
	vertical-align:middle

.popup
	display:none
:checked~ul
	display:block
:checked~figure
	display:inline-block !important
:checked~.popup
	display:block
input.more
	visibility:hidden
	margin:0
	width:0
	position:absolute
label.more
	cursor:pointer
	display:block
	text-decoration:none
	width:16px
	height:16px
	background:url(plus.png) no-repeat
	background-size:16px 16px
	transition:.5s

:checked~label.more
	transform:rotate(45deg)

@keyframes zoom
	from
		transform:scale3D(0,0,1)
		opacity:0
	to
		transform:scale3D(1,1,1)
		opacity:1
@keyframes fade
	from
		opacity:0
	to
		opacity:1

.cover
	z-index:10
	background:rgba(#000,.4)
	position:fixed
	width:100%
	height:100%
	top:0
	left:0
	animation:fade .5s
	iframe
		background:#fff
		border:none
		position:absolute
		width:60%
		height:60%
		top:20%
		left:20%
		animation:zoom .5s

body>menu
	display:none
	padding:0 1em

.logos menu.logos
.elements menu.elements
.templates menu.templates
.graphics menu.graphics
	display:block

.templates menu
	text-align:center

menu a
	display:inline-block
	background:white
	padding:.5em
	margin-bottom:5px
	margin-right:5px
	border-radius:.2em
	cursor:pointer

#input
	font-size:1.4em
	padding:.3em .6em
	width:12em
	margin:1em 0
	max-width:100%
	border-radius:25px
	border:none
	border-top:solid 1px rgba(#000,.1)
	background:#fff url(search.png) center right no-repeat
	box-shadow:0 1px 0 rgba(#fff,.5)
	background-size:32px 24px
	//fixes bug in chrome
	font-family: Ubuntu
#input::-ms-clear
	display: none

::-webkit-input-placeholder
	color: rgba(#000,.3)
:-moz-placeholder
	color: rgba(#000,.3)

#container a
	display:inline-block
	background:#fff
	white-space:pre-wrap
	padding:16px
	width:100%
	//margin-bottom:1rem ie!!!
	margin-bottom:16px
	text-rendering: optimizeSpeed
	text-decoration:none !important
	small
		opacity:0.5
		font-size:0.62em
		display:none
#container
	padding:0 1em
	column-width:200px
	column-gap:1em
	margin-bottom:-3em

.graphics #container
	column-width:500px

.logos #container a
.elements #container a
.graphics #container a
	font-size:0
	text-decoration:none
	line-height:0
.templates #container
	column-width:320px

.templates #container a img
	width:150px
	float:right
	margin-left:1em

.ie #container a
	width:200px
	margin-right:1em
.graphics .ie #container a
	width:500px
.templates .ie #container a
	width:320px

footer
	text-align:center
	padding:2em
	padding-top:5em
	padding-bottom:1em
	text-shadow:0 1px 0 rgba(#fff,.4)
	color:rgba(#000,.6)
	.txt
		display:inline-block
		padding:0 2em
		padding-bottom:1em
	a
		color:#fff
		text-shadow:0 1px 0 rgba(#fff,.1)


brand1=#83c61a
brand2=#bd000c
brand3=#2eb3ed
brand4=#ee9908

brand2=lighten(desaturate(#9300cf,20%),20%)

lb1=lighten(brand1,15%)
lb2=lighten(brand2,15%)
lb3=lighten(brand3,15%)
lb4=lighten(brand4,15%)

light1=rgb(red(lb1)+15,green(lb1),blue(lb1))
light2=rgb(red(lb2),green(lb2)+15,blue(lb2))
light3=rgb(red(lb3),green(lb3)+15,blue(lb3))
light4=rgb(red(lb4),green(lb4)+15,blue(lb4))

xlight1=lighten(light1,15%)
xlight2=lighten(light2,6%)
xlight3=lighten(light3,25%)
xlight4=lighten(light4,25%)


xlight=xlight1 xlight2 xlight3 xlight4
light=light1 light2 light3 light4
brand=brand1 brand2 brand3 brand4

