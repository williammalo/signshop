@import nib

retina="(-o-min-device-pixel-ratio: 5/4),(-webkit-min-device-pixel-ratio: 1.25),(min-resolution: 120dpi)"

@font-face
	font-family: 'Ubuntu';
	font-style: normal;
	font-weight: 400;
	src: local('Ubuntu'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/vRvZYZlUaogOuHbBTT1SNevvDin1pK8aKteLpeZ5c0A.woff) format('woff');

@font-face
	font-family: 'Ubuntu';
	font-style: normal;
	font-weight: 700;
	src: local('Ubuntu Bold'), local('Ubuntu-Bold'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/0ihfXUL2emPh0ROJezvraLO3LdcAZYWl9Si6vvxL-qU.woff) format('woff');


@keyframes shake
	0%
		transform: translateX(0)
		color:red
	10%, 30%, 50%, 70%
		transform: 	translateX(-10px)
	20%, 40%, 60%
		transform:	translateX(10px)
	80%
		transform: translateX(0)
		color:red
	100%
		color:rgba(#000,.7)

:checked~strong.popup
	animation-name: shake
	animation-duration: 1s
	animation-fill-mode: both


*
	box-sizing:     border-box
	text-rendering: optimizeLegibility
html,input
	font-family:Ubuntu,sans-serif
html
	color:rgba(#000,.7)
	line-height:1.4em
	min-width:570px
	font-size:16px //force font size in mobile webkit
	-webkit-text-size-adjust: 100% //force font size in mobile webkit


body
	margin:0

html,body
	min-height: 100%

img
	max-width: 100%
	border: none
ul
	margin:1em 0
	padding-left:1.1em
	max-width:35em

figure
	width:310px
	display:inline-block
	float:right
	margin:0
	overflow:hidden
	background:#fff
	position:relative
	//box-shadow:0 1px 5px rgba(#000,.5)
	&:before
		content:""
		display:block
		padding-top:45%

figure img
	position:absolute
	width:100%
	top:0
	left:0

@keyframes s
	0%,22.67%,100%{opacity: 0}
	19.67%,3%{opacity: 1}

.slide img{opacity:0}
.slide img:nth-child(1){animation:s 24s    infinite}
.slide img:nth-child(2){animation:s 24s 4s infinite}
.slide img:nth-child(3){animation:s 24s 8s infinite}
.slide img:nth-child(4){animation:s 24s 12s infinite}
.slide img:nth-child(5){animation:s 24s 16s infinite}
.slide img:nth-child(6){animation:s 24s 20s infinite}

header
	background:#575043
	position:relative


h1,#cart,#mail
	color:#fff
h1
	margin:0
	line-height:1em
	//padding:.5rem 1rem ie!!!!
	padding:8px 16px
	//text-shadow:2px 2px 3px rgba(#000,.4)
	img
		width:26px
		margin-right:.4em
		vertical-align:middle
	span
		vertical-align:middle

#cart,#mail
	position:absolute
	font-size:.62em
	top:0
	padding:1em 0
	z-index:1
	cursor:pointer
	line-height:1em
	min-width:16px
	height:36px

#cart
	right:1em
	background:url(cart.png) center no-repeat
	background-size:16px 16px

/*start mail*/
#mail
	right:3.5em
	background:url(mail.png) center no-repeat
	background-size:16px 16px
	input[type=submit],input[type=email]
		border:none
		border-radius:5px
		padding:1px 5px
		display:none
	input[type=submit]
		color:#fff
		cursor:pointer
	input[type=email]
		background:#fff
#mail:hover input
	display:inline-block
#mail:hover
	background:none
#mail:before
	position:relative
#mail:hover:before
	content:"Subscribe to our newsletter for a free template!"
	display:inline-block
	padding-right:1em
#subscribed:target #mail:before
	content:"We sent you an email to validate your subscription."
	display:inline-block
	top:.4em
	padding-right:0 !important
#subscribed:target #mail *
	display:none

/* end mail*/

/* start nav*/

nav
	position:absolute
	bottom:-1px
	right:0
	direction:rtl
	padding-right:.3em
	a
		position:relative
		margin-right:17px
		//width:10em
		display:inline-block
		direction:ltr
		padding:7px 1px 9px 1px
		font-size:20px
		line-height:1em
		text-decoration:none
		color:inherit

.tab
	position:relative
	transform:scale(.6,.6)
	transform-origin:0 0
	position:absolute
	top:0
	right:-34px
.tab:nth-child(1){left:-20px}
svg path{stroke:none;}

.logos nav [href=logos]
.elements nav [href=elements]
.templates nav [href=templates]
.graphics nav [href=graphics]
	z-index:1

/* end nav*/

aside
	padding:1em
	//box-shadow:0 -5px 10px rgba(#000,.2)
	position:relative

aside a,aside .more,footer a
	color:#fff

.paypal
	height:25px
	vertical-align:middle

.popup
	display:none
:checked~ul
	display:block
:checked~figure
	display:inline-block !important
:checked~.popup
	display:block
input.more
	visibility:hidden
	margin:0
	width:0
	position:absolute
label.more
	cursor:pointer
	display:block
	width:16px
	height:16px
	background:url(plus.png) no-repeat
	background-size:16px 16px
	transition:.5s

:checked~label.more
	transform:rotate(45deg)

@keyframes zoom
	from
		transform:scale3D(0,0,1)
		opacity:0
	to
		transform:scale3D(1,1,1)
		opacity:1
@keyframes fade
	from
		opacity:0
	to
		opacity:1

.cover
	z-index:10
	background:rgba(#000,.4)
	position:fixed
	width:100%
	height:100%
	top:0
	left:0
	animation:fade .5s
	iframe
		background:#fff
		border:none
		position:absolute
		width:60%
		height:60%
		top:20%
		left:20%
		animation:zoom .5s

body>menu
	display:block
	text-align:center
	padding:0

#input
	font-size:1.4em
	padding:.3em .6em
	width:12em
	margin:1em 0
	border-radius:1.1em
	border:none
	background:#fff url(search.png) center right no-repeat
	background-size:32px 24px
#input::-ms-clear
	display: none

#container a
	display:inline-block
	background:#fff
	white-space:pre-wrap
	padding:1em
	width:100%
	//margin-bottom:1rem ie!!!
	margin-bottom:1em
	text-rendering: optimizeSpeed
	text-decoration:none

#container
	padding:0 1em
	column-width:320px
	column-gap:1em
	margin-bottom:-3em

.templates #container a img
	width:150px
	float:right
	margin-left:1em

.ie #container a
	width:200px
	margin-right:1em

.templates .ie #container a
	width:320px

footer
	text-align:center
	padding:2em
	padding-top:5em
	padding-bottom:1em
	.txt
		display:inline-block
		padding:0 2em
		padding-bottom:1em


brand1=#83c61a
brand2=#bd000c
brand3=#2eb3ed
brand4=#ee9908

brand2=lighten(desaturate(#9300cf,20%),20%)

lb1=lighten(brand1,10%)
lb2=lighten(brand2,10%)
lb3=lighten(brand3,10%)
lb4=lighten(brand4,10%)

light1=rgb(red(lb1)+10,green(lb1),blue(lb1))
light2=rgb(red(lb2),green(lb2)+10,blue(lb2))
light3=rgb(red(lb3),green(lb3)+10,blue(lb3))
light4=rgb(red(lb4),green(lb4)+10,blue(lb4))

xlight1=lighten(light1,15%)
xlight2=lighten(light2,6%)
xlight3=lighten(light3,25%)
xlight4=lighten(light4,25%)


xlight=xlight1 xlight2 xlight3 xlight4
light=light1 light2 light3 light4
brand=brand1 brand2 brand3 brand4

#mail input[type=submit]
	background:brand[2]

nav [href=templates]
	background:light[2]
	border-top-color:xlight[2]
	.tab path
		fill:light[2]
	.border path
		fill:xlight[2]
nav [href=templates]
	border:none
	.border
		display:none

aside
	i=2
	//border-top:solid 1px xlight[i]
	background:light[i]
	background:url(s("bak%s.png",i+1)) center right no-repeat ,linear-gradient(light[i] 0%,lighten(brand[i],10%) 10% ,brand[i] 90% ,darken(brand[i],5%) 100%)
	//border-bottom:solid 1px darken(brand[i],25%)
	background-size: auto 64px, 100% 100%
	background-origin: content-box,padding-box
	@media screen and (max-width: 1084px)
		background:light[i]
		background:linear-gradient(light[i] 0%,lighten(brand[i],10%) 10% ,brand[i] 90% ,darken(brand[i],5%) 100%)

html
	background:lighten(xlight[2],60%)
	background:lighten(xlight[2],60%) linear-gradient(rgba(xlight[2],0) 0%,light[2] 100%)

#container a
	color:brand[2]

@media retina
	label.more
		background-image:url(plusr.png)
	#cart
		background-image:url(cartr.png)
	#mail
		background-image:url(mailr.png)
	#input
		background-image:url(searchr.png)