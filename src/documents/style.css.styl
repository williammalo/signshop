header
	height:0
	padding-bottom:20%
	//max-height:109px
	//transition:max-height .5s
	overflow:hidden
	position:relative
header.dark-background
	background:url(/banner2.jpg)
	background-size:cover
header img
	width:100%;
	display:block
.header-content
	padding:1em;
	//position:absolute;
	top:0;
	//left:50%;
	//transform:translateX(-50%)
	//background:rgba(#000,0.7)
	//border-radius:1em
	//width:685px
	color:#fff
	text-align:center
	background:#50493F;//brand[2]
