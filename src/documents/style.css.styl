@keyframes banner
	0%
		opacity:0
	10%
		opacity:0
	20%
		opacity:1
	30%
		opacity:0
	100%
		opacity:0


.banner-words
	width:33.33%
	float:left
	text-align:center
	text-transform:uppercase;
	padding-top:16.5%
	font-size:3vw
	text-shadow:0 0 1em #000
	font-weight:bold
	opacity:0
.banner-words:first-child
	color:#000
	text-shadow:0 0 1em #fff
	animation:banner 20s infinite
.banner-words:nth-child(2)
	animation:banner 20s 3s infinite
.banner-words:nth-child(3)
	animation:banner 20s 6s infinite

////////////////////////////////////////////////////////////////////////////////////////////////
//content
////////////////////////////////////////////////////////////////////////////////////////////////

.popup
	display:none
#toggle-info:checked~.main .popup
	display:block

.slide
	width:310px
	height:151px
	float:right
	margin-left:1em
	position:relative
	background:#fff
	img
		position:absolute
		top:0
		left:0

@keyframes s
	0%,22.67%,100%
		opacity: 0
	19.67%,3%
		opacity: 1

.slide img{opacity:0}
.slide img:nth-child(1){animation:s 24s    infinite}
.slide img:nth-child(2){animation:s 24s 4s infinite}
.slide img:nth-child(3){animation:s 24s 8s infinite}
.slide img:nth-child(4){animation:s 24s 12s infinite}
.slide img:nth-child(5){animation:s 24s 16s infinite}
.slide img:nth-child(6){animation:s 24s 20s infinite}

.popup strong
	max-width:694px

#toggle-info:checked~* .popup strong
	display:block
	animation: shakered 1s

////////////////////////////////////////////////////////////////////////////////////////////////
//toolbar
////////////////////////////////////////////////////////////////////////////////////////////////

.toolbar
	@extend .one-line
	//background:rgba(#000,0.5) //brand[2]
	position:absolute;
	//width:100%;
	//position:-webkit-sticky
	top:0
	right:0
	text-align:right;
	z-index:2

.toolbar>*
	display:inline-block
	vertical-align:middle
.toolbar>*:not(:first-child)
	margin-left:1em
#inputform
	text-align:center
	padding:1em
	padding-top:2em
	z-index:1
	position:relative
#ws-input
	font-size:2em
	background:#fff url(search.png) center right no-repeat
	background:#fff url("data:image/svg+xml;base64,") center right no-repeat
	background-size:1.3333em 1em
	animation:bounceIn .5s
