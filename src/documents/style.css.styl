.toolbar-icon
	position:relative
	text-align:center
	width:1em
	transform:translateZ(0px)
	cursor:pointer
.toolbar-icon:after, .toolbar-icon:before
	opacity:0
	transform:translateY(-16px)
	transition:opacity .3s, transform .3s
.ie .toolbar-icon:after, .ie .toolbar-icon:before
	visibility:hidden
.toolbar-icon:after
	content:attr(data-title)
	font-size:14px
	position:absolute
	color:#fff
	background:#000
	background:rgba(#000,.6)
	width:40px
	border-radius:5px
	top:24px
	left:-12px
	line-height:1.1em
	padding-top:3px
	padding-bottom:3px
.toolbar-icon:before
	content:""
	position:absolute
	display:block
	width:0
	top:16px
	left:4px
	border:solid 4px rgba(#000,0)
	border-bottom-color:rgba(#000,.6)

.toolbar-icon:hover:after, .toolbar-icon:hover:before, .toolbar-icon:focus:after, .toolbar-icon:focus:before
	opacity:1
	transform:translateY(0px)
	visibility:visible

.info svg
	transition:transform .5s
#toggle-info:checked~* label.info svg
	transform:rotate(45deg)
#toggle-info:checked~* label.info:after
	content:"less info"

.toolbar-icon.mail:after,.toolbar-icon.twitter:after
	width:52px
	left:-18px

#mail-form
	display:none
	font-size: 12px;
#toggle-mail:checked~* #mail-form
	display:inline-block
#toggle-mail:checked~* .toolbar-icon.mail
	display:none
#toggle-mail:checked~.toolbar
	background:rgba(#000,0.3)
////////////////////////////////////////////////////////////////////////////////////////////////
//results
////////////////////////////////////////////////////////////////////////////////////////////////

.block
	background:#fff
	padding:1em
.info-block
	margin-bottom:-1em

#ws-container
	column-width:20em
	column-gap:1em
	a
		display:inline-block
		width:100%
		margin-bottom:1em
		background:#fff
		white-space:pre-wrap
		text-rendering: optimizeSpeed
		text-decoration:none
		overflow:hidden
	img
		float:right
		margin-left:1em
#showalllink
	cursor:pointer
.ie #ws-container a
	width:20em
	margin-right:1em

.clicked
	border:solid .5em brand[2]
	border-bottom-width:2em
	position:relative

.clicked:after
	content:"Added to Cart"
	position:absolute
	bottom:-1.7em
	left:0
	color:#fff

////////////////////////////////////////////////////////////////////////////////////////////////
//helper classes
////////////////////////////////////////////////////////////////////////////////////////////////

.hidden
	display:none

.dark-background
	background:#575043
	color:#fff
	a
		color:light[2]

.spacer
	display:inline-block
	padding-right:3em

.cover
	z-index:10
	position:fixed
	width:100%
	height:100%
	top:0
	left:0
	background:rgba(#000,.4)
	animation:fade .5s
	iframe
		position:absolute
		width:60%
		height:60%
		top:20%
		left:20%
		background:#fff
		border:none
		animation:zoom .5s

[hidden]
	display:none

////////////////////////////////////////////////////////////////////////////////////////////////
//media queries
////////////////////////////////////////////////////////////////////////////////////////////////

.mobile
	display:none

@media screen and (max-width: 720px)
	html
		font-size:14px

@media screen and (max-width: 930px)
	.header-content-inner
		text-align:left

@media screen and (max-width: 824px)
	.middle div
		width:330px
		line-height:1.3em
		text-align:left
	h1
		font-size:2.6em
		margin-bottom: .2em

@media screen and (max-width: 568px)
	.header-content
		text-align:left
	.header-content,.main
		background:#BABABA
@media screen and (max-width: 580px)
	.slide
		display:none !important

@media screen and (max-width: 535px)
	#mail-form
		margin-left:0em
	#toggle-mail:checked~* #mail-form
		display:block
		margin-top:.5em
@media screen and (max-width: 520px)
	.mobile
		display:block
		margin-top:1em
	.desktop
		display:none
	header
		max-height:150px
	h1
		width:200px
		font-size:3em
		line-height:.9em
		margin:0
	.header-helper
		font-size: 1.35em;
		position: relative;
		left: -3px;
		top: 2px;

@media screen and (max-width: 400px)
	.header-content h1
		font-size:2.4em

