---
autoprefix: true
---
vendors = official

sun(a,b)
	rgb(red(a)+b,green(a)+b,blue(a))

brand=#83c61a #bd000c #2eb3ed #ee9908

brand[1]=lighten(desaturate(#9300cf,20%),20%)

light=tint(sun(brand[0],2),15%) tint(sun(brand[1],2),15%) tint(sun(brand[2],2),15%) tint(sun(brand[3],2),15%)

xlight=tint(sun(light[0],2),65%) tint(sun(light[1],2),65%) tint(sun(light[2],2),65%) tint(sun(light[3],2),65%)

dark=(brand[0]*0.95) (brand[1]*0.95) (brand[2]*0.95) (brand[3]*0.95)

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//reset
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////


*, :before, :after
	box-sizing:     border-box

html,input
	font-family:Ubuntu, Helvetica Neue, Helvetica, sans-serif

html
	line-height:1.4em
	font-size:16px //force font size in mobile webkit
	-webkit-text-size-adjust: 100% //force font size in mobile webkit
	background: xlight[2]
	background:url(/bannerbottom.jpg)
	background-size:100%

.main
	background:url(/bannerbottom.jpg)
	background:linear-gradient(to bottom, rgba(#B9B9B9,0) 0%,rgba(#B9B9B9,0.6) 50%,rgba(#B9B9B9,1) 100% )
	background-size:100%
body
	margin:0

img
	max-width: 100%
	border: none

ul
	padding-left:1.1em

ul:first-child
	margin-top:0

a
	color:dark[2]

input[type=text],input[type=submit],input[type=email]
	font-size:inherit
	padding:.3em .6em
	margin:0
	border:none
	border-radius: 1em;
	background:#fff
	outline: none
	max-width:100%
input[type=text],input[type=email]
	width:12em
input[type=submit]
	color:brand[2]
	cursor:pointer

input:focus
	box-shadow: 0 0 0 .2em brand[2]
input:focus::-webkit-input-placeholder
	color:dark[2]
input:focus:-moz-placeholder
	color:dark[2]
input:focus::-moz-placeholder
	color:dark[2]
input:focus:-ms-input-placeholder
	color:dark[2]

input::-ms-clear
	display: none


////////////////////////////////////////////////////////////////////////////////////////////////
//global styles
////////////////////////////////////////////////////////////////////////////////////////////////

.toolbar,#ws-container a,#ws-container,.pad
	padding:1em

.one-line
	line-height:1ex

////////////////////////////////////////////////////////////////////////////////////////////////
//keyframes
////////////////////////////////////////////////////////////////////////////////////////////////

@keyframes zoom
	from
		transform:scale3D(0,0,1)
		opacity:0
	to
		transform:scale3D(1,1,1)
		opacity:1
@keyframes fade
	from
		opacity:0
	to
		opacity:1
@keyframes bounceIn
	0%, 40%, 80%, 100%
		transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000)
	0%
		opacity: 0
		transform: scale(.3, .3)
	40%
		transform: scale(1.1, 1.1)
	80%
		transform: scale(1, 1)
	100%
		opacity: 1
@keyframes shakered
	0%
		transform: translateX(0)
	10%, 30%, 50%, 70%
		transform: 	translateX(-10px)
	20%, 40%, 60%
		transform:	translateX(10px)
	80%
		transform: translateX(0)



