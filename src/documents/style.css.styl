---
autoprefix: true
---
retina="(-o-min-device-pixel-ratio: 5/4),(-webkit-min-device-pixel-ratio: 1.25),(min-resolution: 120dpi)"

@font-face
	font-family: Ubuntu
	font-style: normal
	font-weight: 400
	src: local('Ubuntu'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/vRvZYZlUaogOuHbBTT1SNevvDin1pK8aKteLpeZ5c0A.woff) format('woff')

@font-face
	font-family: Ubuntu
	font-style: normal
	font-weight: 700
	src: local('Ubuntu Bold'), local('Ubuntu-Bold'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/0ihfXUL2emPh0ROJezvraLO3LdcAZYWl9Si6vvxL-qU.woff) format('woff')

*, :before, :after
	box-sizing:     border-box
	text-rendering: optimizeLegibility

/* colors */
vendors = official

sun(a,b)
	rgb(red(a)+b,green(a)+b,blue(a))

brand=#83c61a #bd000c #2eb3ed #ee9908

brand[1]=lighten(desaturate(#9300cf,20%),20%)

light=tint(sun(brand[0],8),15%) tint(sun(brand[1],8),15%) tint(sun(brand[2],8),15%) tint(sun(brand[3],8),15%)

xlight=tint(sun(light[0],8),65%) tint(sun(light[1],8),65%) tint(sun(light[2],8),65%) tint(sun(light[3],8),65%)

dark=(brand[0]*0.95) (brand[1]*0.95) (brand[2]*0.95) (brand[3]*0.95)

html,input
	font-family:Ubuntu, Helvetica Neue, Helvetica, sans-serif
html
	color:rgba(#000,.7)
	line-height:1.4em
	min-width:570px
	font-size:16px //force font size in mobile webkit
	-webkit-text-size-adjust: 100% //force font size in mobile webkit

body
	margin:0

.pad
	display:inline-block
	padding-right:3em
img
	max-width: 100%
	border: none
ul
	padding-left:1.1em

figure
	width:310px
	height:151px
	background:#fff
	float:right
	margin:0
	position:relative

figure img
	position:absolute
	top:0
	left:0

@keyframes s
	0%,22.67%,100%
		opacity: 0
	19.67%,3%
		opacity: 1

.slide img{opacity:0}
.slide img:nth-child(1){animation:s 24s    infinite}
.slide img:nth-child(2){animation:s 24s 4s infinite}
.slide img:nth-child(3){animation:s 24s 8s infinite}
.slide img:nth-child(4){animation:s 24s 12s infinite}
.slide img:nth-child(5){animation:s 24s 16s infinite}
.slide img:nth-child(6){animation:s 24s 20s infinite}

header
	background:#575043
	position:relative


h1, #cart, #mail
	color:#fff
h1
	margin:0
	//padding:.5rem 1rem ie!!!!
	padding:7px 16px
	img
		width:26px
		height:58px
		margin-right:.4em
		vertical-align:middle
	span
		vertical-align:middle

#cart,#mail
	position:absolute
	font-size:.62em
	top:0
	padding:1em 0
	min-width:16px
	height:36px

#cart
	right:1em
	background:url(cart.png) center no-repeat
	background-size:16px 16px

/*start mail*/
#mail
	right:3.5em
	background:url(mail.png) center no-repeat
	background-size:16px 16px
	input[type=submit],input[type=email]
		border:none
		border-radius:5px
		padding:1px 5px
		display:none
	input[type=submit]
		color:#fff
		cursor:pointer
	input[type=email]
		background:#fff
#mail:hover input
	display:inline-block
#mail:hover
	background:none
#mail:hover:before
	content:"Subscribe to our newsletter for a free template!"
	display:inline-block
	padding-right:1em
#subscribed:target #mail
	background:none
#subscribed:target #mail:before
	content:"We sent you an email to validate your subscription."
#subscribed:target #mail *
	display:none

/* end mail*/

/* start nav*/

nav
	position:absolute
	bottom:-1px
	right:0
	a
		position:relative
		margin-right:17px
		display:inline-block
		direction:ltr
		padding:7px 1px 9px 1px
		font-size:20px
		line-height:1em
		text-decoration:none
		color:inherit

.tab
	position:relative
	transform:scale(.6,.6)
	transform-origin:0 0
	position:absolute
	top:0
	right:-34px
.tab:nth-child(1){left:-20px}

/* end nav */
/* start infobox */

.infobox
	padding:1em

.infobox a,.infobox .more
	color:#fff

.paypal
	height:25px
	width:98px
	vertical-align:middle

.popup
	display:none
#tmore:checked~div .popup
	display:block
input.more
	display:none
label.more
	cursor:pointer
	display:block
	width:16px
	height:16px
	background:url(plus.png) no-repeat
	background-size:16px 16px
	transform:rotate(0deg)
	transition:.5s

#tmore:checked~div label.more
	transform:rotate(45deg)

@keyframes shakered
	0%
		transform: translateX(0)
		color:red
	10%, 30%, 50%, 70%
		transform: 	translateX(-10px)
	20%, 40%, 60%
		transform:	translateX(10px)
	80%
		transform: translateX(0)
		color:red
	100%
		color:rgba(#000,.7)

#tmore:checked~div .popup strong
	animation: shakered 1s
	display:block

/* end infobox */

@keyframes zoom
	from
		transform:scale3D(0,0,1)
		opacity:0
	to
		transform:scale3D(1,1,1)
		opacity:1
@keyframes fade
	from
		opacity:0
	to
		opacity:1

.cover
	z-index:10
	background:rgba(#000,.4)
	position:fixed
	width:100%
	height:100%
	top:0
	left:0
	animation:fade .5s
	iframe
		background:#fff
		border:none
		position:absolute
		width:60%
		height:60%
		top:20%
		left:20%
		animation:zoom .5s

@keyframes bounceIn
	0%, 40%, 80%, 100%
		transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000)
	0%
		opacity: 0
		transform: scale3d(.3, .3, .3)
	40%
		transform: scale3d(1.1, 1.1, 1.1)
	80%
		transform: scale3d(1, 1, 1)
	100%
		opacity: 1

#inputform
	text-align:center
#input
	font-size:1.4em
	padding:.3em .6em
	width:12em
	margin:2em 0
	border-radius:1.1em
	border:none
	background:#fff url(search.png) center right no-repeat
	background-size:32px 24px
	outline: none
	animation:bounceIn .5s
#input::-ms-clear
	display: none

#input:focus
	box-shadow: 0 0 0 .1em brand[2]
#input:focus::-webkit-input-placeholder
	color:dark[2]
#input:focus:-moz-placeholder
	color:dark[2]
#input:focus::-moz-placeholder
	color:dark[2]
#input:focus:-ms-input-placeholder
	color:dark[2]

#container a
	display:inline-block
	background:#fff
	white-space:pre-wrap
	padding:1em
	width:100%
	//margin-bottom:1rem ie!!!
	margin-bottom:1em
	text-rendering: optimizeSpeed
	text-decoration:none

#container
	padding:0 1em
	column-width:320px
	column-gap:1em

#container a img
	width:150px
	float:right
	margin-left:1em

.ie #container a
	width:320px
	margin-right:1em

#mail input[type=submit]
	background:brand[2]

nav [href=templates]
	background:light[2]
	.tab path
		fill:light[2]

.infobox
	i=2
	background:light[i]
	background:url(s("bak%s.png",i+1)) center right no-repeat ,linear-gradient(light[i] 0%, brand[i] 50% ,dark[i] 100%)
	background-size: auto 64px, 100% 100%
	background-origin: content-box,padding-box
	@media screen and (max-width: 1084px)
		background:light[i]
		background:linear-gradient(light[i] 0%, brand[i] 50% ,dark[i] 100%)
#tmore:checked~.infobox
	background:light[2]
	background:linear-gradient(light[2] 0%, brand[2] 50% ,dark[2] 100%)

html
	background:xlight[2]

#container a
	color:dark[2]

@media retina
	label.more
		background-image:url(plusr.png)
	#cart
		background-image:url(cartr.png)
	#mail
		background-image:url(mailr.png)
	#input
		background-image:url(searchr.png)