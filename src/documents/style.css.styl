retina="(-o-min-device-pixel-ratio: 5/4),(-webkit-min-device-pixel-ratio: 1.25),(min-resolution: 120dpi)"

@font-face
	font-family: 'Ubuntu';
	font-style: normal;
	font-weight: 400;
	src: local('Ubuntu'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/vRvZYZlUaogOuHbBTT1SNevvDin1pK8aKteLpeZ5c0A.woff) format('woff');

@font-face
	font-family: 'Ubuntu';
	font-style: normal;
	font-weight: 700;
	src: local('Ubuntu Bold'), local('Ubuntu-Bold'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/0ihfXUL2emPh0ROJezvraLO3LdcAZYWl9Si6vvxL-qU.woff) format('woff');


@keyframes shake
	0%
		transform: translateX(0)
		color:red
	10%, 30%, 50%, 70%
		transform: 	translateX(-10px)
	20%, 40%, 60%
		transform:	translateX(10px)
	80%
		transform: translateX(0)
		color:red
	100%
		color:rgba(#000,.7)

:checked~strong.popup
	animation-name: shake
	animation-duration: 1s
	animation-fill-mode: both


*
	box-sizing:     border-box
	text-rendering: optimizeLegibility

html
	overflow-y: scroll
	font-family:Ubuntu,sans-serif
	color:rgba(#000,.7)
	line-height:1.4em
	min-width:700px
	font-size:16px //force font size in mobile webkit
	-webkit-text-size-adjust: 100% //force font size in mobile webkit

body
	margin:0

html,body
	min-height: 100%

img
	max-width: 100%
	border: none
	height:auto
ul
	margin:1em 0
	padding-left:1.1em
	max-width:35em
a
	text-decoration:underline
	cursor:pointer
figure
	width:310px
	display:inline-block
	float:right
	margin:0
	overflow:hidden
	background:#fff
	position:relative
	&:before
		content:""
		display:block
		padding-top:45%

figure img
	position:absolute
	width:100%
	top:0
	left:0

@keyframes s
	0%,22.67%,100%{opacity: 0}
	19.67%,3%{opacity: 1}

.slide img{opacity:0}
.slide img:nth-child(1){animation:s 24s    infinite}
.slide img:nth-child(2){animation:s 24s 4s infinite}
.slide img:nth-child(3){animation:s 24s 8s infinite}
.slide img:nth-child(4){animation:s 24s 12s infinite}
.slide img:nth-child(5){animation:s 24s 16s infinite}
.slide img:nth-child(6){animation:s 24s 20s infinite}

h1
	margin:0
	//padding:.5rem 1rem ie!!!!
	padding:8px 16px
	img
		height:62px
		margin-bottom:-5px
		margin-right:.4em
		vertical-align:middle
	span
		top:.1em

#cart,#mail
	position:absolute
	font-size:.62em
	top:0
	padding:1em 0
	z-index:1
	cursor:pointer
	color:#fff
	line-height:1em
	min-width:16px
	height:36px

#cart
	right:1em
	background:url(cart.png) center no-repeat
	background-size:16px 16px
#mail
	right:3.5em
	background:url(mail.png) center no-repeat
	background-size:16px 16px
	input[type=submit],input[type=email]
		border:none
		border-radius:5px
		padding:1px 5px
		font-family: Ubuntu
		display:none
	input[type=submit]
		color:#fff
		cursor:pointer
	input[type=email]
		background:#fff
#mail:hover input
	display:inline-block
#mail:hover
	background:none
#mail:before
	position:relative
#mail:hover:before
	content:"Subscribe to our newsletter for a free template!"
	display:inline-block
	padding-right:1em
#subscribed:target #mail:before
	content:"We sent you an email to validate your subscription."
	display:inline-block
	top:.4em
	padding-right:0 !important
#subscribed:target #mail *
	display:none
nav
	position:absolute
	bottom:-1px
	right:0
	direction:rtl
	a
		margin-right:17px
		//width:10em
		display:inline-block
		direction:ltr
		padding:7px 1px 9px 1px
		border-top:solid 1px #000
		font-size:20px
		line-height:1em

.tab
	position:relative
	transform:scale(.6,.6)
	transform-origin:0 0
	position:absolute
	top:0
	right:-34px
.tab:nth-child(3){left:-20px}
.border{transform:scale(.6,.6);transform-origin:0 0;position:absolute;top:-1px;right:-35px;}
.border:nth-child(1){left:-21px}
svg path{stroke:none;}

.logos nav [href=logos]
.elements nav [href=elements]
.templates nav [href=templates]
.graphics nav [href=graphics]
	z-index:1
